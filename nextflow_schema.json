{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/IDENTXX/wf-fusarium-tef1/main/nextflow_schema.json",
  "title": "IDENTXX Fusarium TEF1",
  "type": "object",
  "definitions": {
    "input": {
      "title": "Input Data",
      "type": "object",
      "properties": {
        "reads": { "type": "string", "format": "path", "title": "Reads Directory (Fastq.gz)" },
        "db_fasta": { "type": "string", "format": "file-path", "title": "Reference DB (Fasta)" }
      },
      "required": ["reads", "db_fasta"]
    },
    "params": {
      "title": "Bioinformatics Parameters",
      "type": "object",
      "properties": {
        "min_q": { "type": "integer", "default": 9, "title": "Min Q-Score" },
        "min_len": { "type": "integer", "default": 500, "title": "Min Length (bp)" },
        "cluster_id": { "type": "number", "default": 0.9, "title": "Cluster Identity (0.0-1.0)" },
        "min_cluster_reads": { "type": "integer", "default": 20, "title": "Min Reads per Cluster" }
      }
    }
  },
  "allOf": [{"$ref": "#/definitions/input"}, {"$ref": "#/definitions/params"}]
}
