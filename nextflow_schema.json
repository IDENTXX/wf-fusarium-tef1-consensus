{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/IDENTXX/wf-fusarium-tef1-consensus/blob/main/nextflow_schema.json",
  "title": "Fusarium Consensus Workflow",
  "description": "Analyse-Workflow für TEF1 Metabarcoding",
  "type": "object",
  "definitions": {
    "inputs": {
      "title": "Input Dateien",
      "type": "object",
      "fa_icon": "fas fa-folder-open",
      "properties": {
        "reads": {
          "type": "string",
          "format": "directory-path",
          "title": "Reads Ordner",
          "description": "Wähle den Ordner mit den FastQ-Dateien"
        },
        "db_fasta": {
          "type": "string",
          "format": "file-path",
          "title": "Referenz-Datenbank (Fasta)",
          "description": "Wähle die Fasta-Datei"
        }
      },
      "required": ["reads", "db_fasta"]
    },
    "settings": {
      "title": "Einstellungen",
      "type": "object",
      "fa_icon": "fas fa-cogs",
      "properties": {
        "min_q": { "type": "integer", "default": 9, "title": "Min Quality" },
        "min_len": { "type": "integer", "default": 300, "title": "Min Length" },
        "max_len": { "type": "integer", "default": 1200, "title": "Max Length" },
        "cluster_id": { "type": "number", "default": 0.90, "title": "Cluster Identity (0.90)" },
        "blast_topn": { "type": "integer", "default": 5, "title": "BLAST Hits" }
      }
    }
  },
  "allOf": [
    { "$ref": "#/definitions/inputs" },
    { "$ref": "#/definitions/settings" }
  ]
}
