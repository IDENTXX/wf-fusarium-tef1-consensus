{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/IDENTXX/wf-fusarium-tef1-consensus/blob/main/nextflow_schema.json",
  "title": "Fusarium Consensus Workflow",
  "type": "object",
  "definitions": {
    "input_files": {
      "title": "Input Files",
      "type": "object",
      "properties": {
        "reads": {
          "type": "string",
          "format": "directory-path",
          "title": "Reads Folder (Fastq)"
        },
        "db_fasta": {
          "type": "string",
          "format": "file-path",
          "title": "Database (Fasta)"
        }
      },
      "required": ["reads", "db_fasta"]
    }
  },
  "allOf": [
    { "$ref": "#/definitions/input_files" }
  ]
}
