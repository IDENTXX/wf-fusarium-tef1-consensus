{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/IDENTXX/wf-fusarium-tef1-consensus/blob/main/nextflow_schema.json",
  "title": "Fusarium Consensus Workflow",
  "description": "Analyse-Workflow f√ºr TEF1 Metabarcoding",
  "type": "object",
  "definitions": {
    "input_output": {
      "title": "Input & Output",
      "type": "object",
      "fa_icon": "fas fa-plug",
      "properties": {
        "reads": {
          "type": "string",
          "format": "directory-path",
          "title": "Reads Directory",
          "description": "Ordner mit den FastQ Dateien (werden automatisch erkannt)",
          "fa_icon": "fas fa-folder-open"
        },
        "db_fasta": {
          "type": "string",
          "format": "file-path",
          "title": "Referenz Datenbank (Fasta)",
          "description": "Die Fasta-Datei mit den Referenzsequenzen",
          "fa_icon": "fas fa-database"
        },
        "out_dir": {
          "type": "string",
          "default": "output",
          "title": "Output Ordner Name"
        }
      },
      "required": ["reads", "db_fasta"]
    },
    "advanced": {
      "title": "Erweiterte Einstellungen",
      "type": "object",
      "fa_icon": "fas fa-cogs",
      "properties": {
        "min_q": { "type": "integer", "default": 9, "title": "Min Quality" },
        "min_len": { "type": "integer", "default": 300, "title": "Min Length" },
        "max_len": { "type": "integer", "default": 1200, "title": "Max Length" },
        "blast_topn": { "type": "integer", "default": 5, "title": "BLAST Top Hits" }
      }
    }
  },
  "allOf": [
    { "$ref": "#/definitions/input_output" },
    { "$ref": "#/definitions/advanced" }
  ]
}
