manifest {
  name = 'IDENTXX/wf-fusarium-tef1-consensus'
  author = 'IDENTXX'
  mainScript = 'main.nf'
  nextflowVersion = '>=21.10.0'
  version = 'v1.0.0'
}

params {
  reads = null
  db_fasta = null
  out_dir = 'output'
  primer_fwd = ''
  primer_rev = ''
  require_primers = true
  trim_error_rate = 0.12
  min_q = 9
  min_len = 500
  max_len = 900
  cluster_id = 0.90
  min_cluster_reads = 20
  blast_topn = 5
}

process {
  container = 'identxx/fusarium-toolbox:v1.0'
  cpus = 4
  memory = '4 GB'
  errorStrategy = 'finish'
  withName: MAKEBLASTDB { container = 'ncbi/blast:2.16.0' }
  withName: BLASTN { container = 'ncbi/blast:2.16.0' }
}

profiles {
  standard {
    docker.enabled = true
    docker.runOptions = '-u 0:0'
  }
}
